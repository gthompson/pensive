<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>gov.usgs.volcanoes</groupId>
  <artifactId>pensive</artifactId>
  <name>Pensive</name>
  <version>1.3</version>
  <url>http://volcanoes.usgs.gov/software/pensive</url>
  <developers>
    <developer>
      <id>tparker</id>
      <name>Tom Parker</name>
      <email>tparker@usgs.gov</email>
      <properties>
        <active>true</active>
      </properties>
    </developer>
  </developers>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.4.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <minimizeJar>true</minimizeJar>
              <artifactSet>
                <includes>
                  <include>gov.usgs.volcanoes:usgs</include>
                  <include>org.freemarker:freemarker</include>
                  <include>com.martiansoftware:jsap</include>
                  <include>net.sourceforge.jtransforms:jtransforms</include>
                  <include>org.slf4j:*</include>
                  <include>org.apache:log4j</include>
                </includes>
              </artifactSet>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.6</version>
        <configuration>
          <archive>
            <manifest>
              <addClasspath>true</addClasspath>
              <mainClass>gov.usgs.volcanoes.pensive.Pensive</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <releases>
        <checksumPolicy>true</checksumPolicy>
      </releases>
      <id>volcanoes</id>
      <url>http://volcanoes.usgs.gov/software/maven2/</url>
    </repository>
  </repositories>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
</project>

